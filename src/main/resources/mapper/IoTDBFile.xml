<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace指向mapper.xml所对应的Mapper接口-->
<mapper namespace="cn.edu.tsinghua.tsquality.mapper.IoTDBFileMapper">
    <update id="createFileTable" parameterType="String">
        CREATE TABLE IF NOT EXISTS ${tableName}(
            `fid` INTEGER PRIMARY KEY AUTO_INCREMENT,
            `file_version` BIGINT NOT NULL,
            `file_path` VARCHAR(255) NOT NULL UNIQUE
        )
    </update>
    <select id="selectIdByFilePath" resultType="java.lang.Integer">
        SELECT `fid` FROM ${tableName}
        WHERE `file_path` = #{filePath}
    </select>

</mapper>
