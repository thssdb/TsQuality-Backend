<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace指向mapper.xml所对应的Mapper接口-->
<mapper namespace="cn.edu.tsinghua.tsquality.mapper.IoTDBConfigMapper">
    <update id="update">
        update iotdb_configs
        <set>
            <if test="host != null">
                host = #{host},
            </if>
            <if test="port != 0">
                port = #{port},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != 0">
                password = #{password}
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
</mapper>